// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"terminal": {
		"keep_selection_on_copy": false
	},
	"agent_ui_font_size": 20.0,
	"disable_ai": false,
	"languages": {
		"JavaScript": {
			"formatter": { "language_server": { "name": "biome" } }
		},
		"TypeScript": {
			"formatter": { "language_server": { "name": "biome" } }
		},
		"TSX": { "formatter": { "language_server": { "name": "biome" } } },
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"CSS": { "formatter": { "language_server": { "name": "biome" } } }
	},
	"hard_tabs": true,
	"bottom_dock_layout": "contained",
	"tab_size": 4,
	"tabs": {
		"git_status": false,
		"file_icons": true,
		"close_position": "right"
	},
	"tab_bar": {
		"show": true
	},
	"title_bar": {
		"show_branch_icon": false,
		"show_branch_name": true,
		"show_project_items": true,
		"show_onboarding_banner": true,
		"show_sign_in": true,
		"show_user_picture": false
	},
	"project_panel": {
		"starts_open": false,
		"auto_reveal_entries": false,
		"indent_size": 10.0,
		"file_icons": true,
		"folder_icons": true,
		"entry_spacing": "standard",
		"dock": "left",
		"button": true
	},
	"use_smartcase_search": true,
	"indent_guides": {
		"coloring": "indent_aware"
	},
	"show_signature_help_after_edits": true,
	"hover_popover_delay": 200,
	"prettier": {
		"allowed": true
	},
	"agent": {
		"inline_assistant_model": {
			"provider": "zed.dev",
			"model": "claude-sonnet-4-5"
		},
		"default_profile": "write",
		"default_model": {
			"provider": "copilot_chat",
			"model": "gpt-5-mini"
		},
		"model_parameters": []
	},
	"agent_servers": {},
	"buffer_font_family": "BlexMono Nerd Font Mono",
	"icon_theme": "Material Icon Theme",
	"auto_signature_help": false,
	"telemetry": {
		"diagnostics": true,
		"metrics": true
	},
	"base_keymap": "VSCode",
	"status_bar": {
		"experimental.show": true
	},
	"minimap": {
		"show": "never"
	},
	"cursor_blink": false,
	"autosave": "on_focus_change",
	"file_types": {},
	"show_edit_predictions": true,
	"vim_mode": true,
	"vim": {
		"use_system_clipboard": "on_yank"
	},
	"ui_font_size": 16,
	"buffer_font_size": 16.0,
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "Tokyo Night"
	},
	"theme_overrides": {
		"Tokyo Night": {
			"background.appearance": "blurred",
			"background": "#070a11DD",
			"title_bar.background": "#070a11CC",
			"title_bar.inactive_background": "#070a11CC",
			"status_bar.background": "#070a11DD",
			"surface.background": "#070a11",
			"toolbar.background": "#00000000",
			"tab_bar.background": "#00000000",
			"tab.inactive_background": "#00000000",
			"tab.active_background": "#121a2d",
			"search.match_background": "#F9E795",
			"panel.background": "#00000000",
			"panel.indent_guide": "#363b54",
			"panel.indent_guide_active": "#565f89",
			"panel.indent_guide_hover": "#565f89",
			"panel.overlay_background": "#14141b",
			"pane_group.border": "#101014",
			"editor.foreground": "#a9b1d6",
			"editor.background": "#00000000",
			"editor.gutter.background": "#00000000",
			"editor.subheader.background": "#00000000",
			"editor.active_line.background": "#121a2d",
			"editor.highlighted_line.background": "#121a2d",
			"editor.line_number": "#363b54",
			"editor.active_line_number": "#a9b1d6",
			"editor.wrap_guide": "#101014",
			"editor.active_wrap_guide": "#101014",
			"editor.document_highlight.read_background": "#363b54",
			"editor.document_highlight.write_background": "#363b54",
			"editor.document_highlight.bracket_background": "#121a2d"
		}
	}
}
